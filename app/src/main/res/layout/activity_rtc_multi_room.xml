<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/activity_bar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <TextView
            android:id="@+id/rtc_mutil_room_title_textview"
            android:text="多人会话"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#EEEEEE"
            android:textSize="18sp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/rtc_multi_room_back_button"
            android:layout_gravity="left|center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:padding="10dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <ImageButton
            android:id="@+id/webrtc_link_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@color/transparent"
            android:padding="10dp"
            android:src="@drawable/question_link" />
    </FrameLayout>


    <FrameLayout
        android:layout_below="@id/activity_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/rtmproom_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <ScrollView
            android:id="@+id/rtc_mutil_room_global_log_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginBottom="60dp"
            android:background="@color/transparent">

            <TextView
                android:id="@+id/rtc_multi_room_global_log_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#75000000"
                android:singleLine="false"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </ScrollView>

    </FrameLayout>

</RelativeLayout>

